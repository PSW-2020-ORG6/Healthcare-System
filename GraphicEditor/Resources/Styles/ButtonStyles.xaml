<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:GraphicEditor.Resources.Styles">
    
    <Style x:Key="TriangleButton"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Polygon Fill="Coral"
                                 Points="-1,-2 193,0 193,180"
                                 Stroke="Black"
                                 StrokeThickness="2"/>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center">
                        </ContentPresenter>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style x:Key="UButton" 
           TargetType="Button" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Polygon Fill="Purple"
                                 Points="0,0 60,0 60,80 100,80 100,0 160,0 160,145 0,145 "
                                 Stroke="Black"
                                 StrokeThickness="3"/>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center">
                        </ContentPresenter>
                    </Grid>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style x:Key="OctagonButton"
           TargetType="Button" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Polygon Fill="Yellow"
                                 Points="30,2 97,2 127,64 96,124 30,124 -2,63"
                                 Stroke="Black"
                                 StrokeThickness="3"/>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center">
                        </ContentPresenter>
                    </Grid>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style x:Key="DermatologyButton" 
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Rectangle Fill="Chocolate"
                                   Width="150"
                                   Height="250"
                                   Stroke="Black"
                                   StrokeThickness="3"/>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center">
                        </ContentPresenter>
                    </Grid>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

</ResourceDictionary>