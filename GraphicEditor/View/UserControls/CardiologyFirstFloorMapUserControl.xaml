                <Rectangle Margin="647,474,0,0" 
                           Style="{StaticResource DoorHorizontalRectangle}"/>
                <Rectangle Margin="742,505,0,0" 
                           Style="{StaticResource DoorVerticalRectangle}"/>
                <Rectangle Margin="368,474,0,0" 
                           Style="{StaticResource DoorHorizontalRectangle}"/>
                <Rectangle Margin="476,474,0,0" 
                           Style="{StaticResource DoorHorizontalRectangle}"/>
                <Rectangle Margin="844,485,0,0" 
                           Style="{StaticResource DoorHorizontalRectangle}"/>
                <Image x:Name="image_Copy" 
                        Height="44" 
                        HorizontalAlignment="Left" 
                        Margin="272,511,0,0" 
                        Source="/GraphicEditor;component/Resources/Icons/plant.png" RenderTransformOrigin="-1.059,3.273"
                        VerticalAlignment="Top"
                        Width="51"/>

