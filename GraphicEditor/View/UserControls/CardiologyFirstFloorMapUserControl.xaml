                <Grid Background="#FFC1E2EA"
                      DockPanel.Dock="Top"  
                      Margin="376,306,255,257">
                    <Border Background="Transparent" />
                </Grid>
                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png"
                       Margin="392,320,747,328"/>
                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png"
                       Margin="482,320,657,328"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1" 
                                            ScaleX="-1"/>
                            <SkewTransform AngleY="0"
                                           AngleX="0"/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png"
                       Margin="587,320,553,328"/>
                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png"
                       Margin="678,320,463,328" 
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1" 
                                            ScaleX="-1"/>
                            <SkewTransform AngleY="0"
                                           AngleX="0"/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png"
                       Margin="782,320,358,328"/>
                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png"
                       Margin="870,320,271,328" 
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1" 
                                            ScaleX="-1"/>
                            <SkewTransform AngleY="0"
                                           AngleX="0"/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png" 
                       Margin="393,372,747,276"/>
                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png"
                       Margin="483,377,657,271" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1"
                                            ScaleX="-1"/>
                            <SkewTransform AngleY="0" 
                                           AngleX="0"/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png"
