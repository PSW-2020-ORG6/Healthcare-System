                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png" 
                       Margin="677,377,463,271"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1" 
                                            ScaleX="-1"/>
                            <SkewTransform AngleY="0" 
                                           AngleX="0"/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png" 
