                <Image Source="/GraphicEditor;component/Resources/Icons/chair.png" 
                       Margin="870,377,270,271" 
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1" 
                                            ScaleX="-1"/>
                            <SkewTransform AngleY="0" 
                                           AngleX="0"/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Border BorderBrush="Black" 
                        BorderThickness="2"
                        HorizontalAlignment="Left" 
                        Height="137"
                        Margin="376,306,0,0" 
                        VerticalAlignment="Top" 
                        Width="184">
                    <Image Source="/GraphicEditor;component/Resources/Icons/table.png" 
                           Margin="58,48,78,43" />
                </Border>
                <Border BorderBrush="Black" 
                        BorderThickness="2" 
                        HorizontalAlignment="Left" 
                        Height="137"
                        Margin="560,306,0,0" 
                        VerticalAlignment="Top"
                        Width="182">
                    <Image Source="/GraphicEditor;component/Resources/Icons/table.png"
                           Margin="68,44,68,37"/>
                </Border>
                <Border BorderBrush="Black" 
                        BorderThickness="2" 
                        HorizontalAlignment="Left" 
                        Height="137" 
                        Margin="742,306,0,0" 
                        VerticalAlignment="Top"
                        Width="184">
                    <Image Source="/GraphicEditor;component/Resources/Icons/table.png" 
                           Margin="82,48,54,43" />
                </Border>

            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
