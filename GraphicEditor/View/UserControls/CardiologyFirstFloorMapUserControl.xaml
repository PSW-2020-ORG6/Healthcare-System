<UserControl x:Class="GraphicEditor.View.UserControls.CardiologyFirstFloorMapUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             xmlns:vml="clr-namespace:GraphicEditor.VML"
             vml:ViewModelLocator.AutoHookedUpViewModel="True"
             d:DesignHeight="650" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- #Styles -->
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/RectangleStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/TextBoxStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border BorderBrush="Black" 
            BorderThickness="1">
        <ScrollViewer>
            <Grid>
                <!--FloorPattern-->
                <Image Height="600" 
                       Width="672"
                       HorizontalAlignment="Center"
                       Source="/GraphicEditor;component/Resources/Images/floor.jpg" 
                       VerticalAlignment="Center"/>

                <!--Room1 button-->
                <Button x:Name="Room1Button" 
                        CommandParameter="room1"
                        Margin="254,122,763,453"
                        Style="{StaticResource ResourceKey=RoomButtonStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                                   TextWrapping="Wrap">
                                Room1
                        </TextBlock>
                    </StackPanel>
                </Button>

                <!--Room2 button-->
                <Button x:Name="Room2Button"
                        CommandParameter="room2"
                        Margin="418,122,637,471"
                        Style="{StaticResource ResourceKey=RoomButtonStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                                   TextWrapping="Wrap">
                                Room2
                        </TextBlock>
                    </StackPanel>
                </Button>

                <!--Room3 button-->
                <Button x:Name="Room3Button"
                        CommandParameter="room3"
                        Margin="616,122,423,471"
                        Style="{StaticResource ResourceKey=RoomButtonStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                                   TextWrapping="Wrap">
                                Room3
                        </TextBlock>
                    </StackPanel>
                </Button>

                <!--Room4 button-->
                <Button x:Name="Room4Button"
                        CommandParameter="room4"
                        Margin="758,122,255,453"
                        Style="{StaticResource ResourceKey=RoomButtonStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                                   TextWrapping="Wrap">
                                Room4
                        </TextBlock>
                    </StackPanel>
                </Button>

                <!--Room5 button-->
                <Button x:Name="Room5Button"
                        CommandParameter="room5"
                        Margin="602,484,439,126"
                        Style="{StaticResource ResourceKey=RoomButtonStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                                   TextWrapping="Wrap">
                                Room5
                        </TextBlock>
                    </StackPanel>
                </Button>

                <!--Toilet-->
                <Border BorderBrush="Black"
                        BorderThickness="3"
                        Margin="344,484,621,126">
                    <Rectangle 
                           Fill="#FF6DAEC1">
                    </Rectangle>
                </Border>
                <Image Source="pack://application:,,,/Resources/Icons/toilet.png"
                       Height="60"
                       Margin="376,495,657,145"/>

                <!--Elevator-->
                <Border BorderBrush="Black"
                        BorderThickness="3"
                        Margin="806,495,255,126">
                    <TextBox Style="{StaticResource ElevatorTextBox}"/>
                </Border>

                <!--Decoration-->
                <Image x:Name="image"
                       Height="44" 
                       HorizontalAlignment="Left" 
                       Margin="560,149,0,0" 
                       Source="/GraphicEditor;component/Resources/Icons/plant.png"
                       VerticalAlignment="Top"
                       Width="51"/>

                <!--Doors-->
                <Rectangle Height="100"
                           Margin="254,320,0,0" 
                           Style="{StaticResource DoorVerticalRectangle}"/>
                <Rectangle Margin="308,247,0,0"
                           Style="{StaticResource DoorHorizontalRectangle}"/>
                <Rectangle Margin="456,229,0,0" 
                           Style="{StaticResource DoorHorizontalRectangle}"/>
                <Rectangle Margin="664,229,0,0" 
                    Style="{StaticResource DoorHorizontalRectangle}"/>
                <Rectangle Margin="823,247,0,0" 
